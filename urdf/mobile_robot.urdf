<?xml version="1.0"?>
<robot name="mobile">
    <link name="world"></link>
    <link name="base_link">
    <visual>
        <geometry>
            <box size="0.5 0.25 0.05"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material>
