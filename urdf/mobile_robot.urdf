<?xml version="1.0"?>
<robot name="mobile">
    <link name="world"></link>
    
    <link name="base_link">
    <visual>
        <geometry>
            <box size="0.35 0.25 0.05"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material>
            <color rgba = "0 0 1 1"/>
        </material>
    </visual>
    </link>

    <!--front left wheel-->

    <link name="wheel_1_link">
    <visual>
        <geometry>
            <cylinder length="0.05" radius="0.05"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    </link>

    <joint name="base_to_wheel_1" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1_link"/>
        <origin rpy = "1.57 0 0" xyz = "0.125 0.150 0.0"/>
        <axis xyz = "0 0 1"/>
    </joint>

    <!--rear right wheel-->

    <link name="wheel_2_link">
    <visual>
        <geometry>
            <cylinder length="0.05" radius="0.05"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    </link>

    <joint name="base_to_wheel_2" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_2_link"/>
        <origin rpy = "1.57 0 0" xyz = "-0.125 -0.150 0.0"/>
        <axis xyz = "0 0 1"/>
    </joint>

    <!--front right wheel-->

    <link name="wheel_3_link">
    <visual>
        <geometry>
            <cylinder length="0.05" radius="0.05"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    </link>

    <joint name="base_to_wheel_3" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_3_link"/>
        <origin rpy = "1.57 0 0" xyz = "0 0 0.0"/>
        <axis xyz = "0 0 1"/>
    </joint>


    <!--base to world-->

    <joint name="base_to_world" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz = "0 0 0.05"/>
    </joint>

</robot>